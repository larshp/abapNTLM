{
  "global": {
    "files": "/src/**/*.*",
    "skipGeneratedGatewayClasses": true,
    "skipGeneratedPersistentClasses": true,
    "skipGeneratedFunctionGroups": true
  },
  "dependencies": [
    {
      "url": "https://github.com/open-abap/open-abap",
      "folder": "/deps",
      "files": "/src/**/*.*"
    }
  ],
  "syntax": {
    "version": "v740sp02",
    "errorNamespace": "^(Z|Y)"
  },
  "rules": {
    "fully_type_itabs": true,
    "no_inline_in_optional_branches": true,
    "nrob_consistency": true,
    "omit_preceding_zeros": true,
    "pragma_style": true,
    "prefer_corresponding": true,
    "select_single_full_key": true,
    "slow_parameter_passing": true,
    "static_call_via_instance": true,
    "strict_sql": true,
    "superfluous_value": true,
    "unnecessary_chaining": false,
    "unnecessary_pragma": true,
    "unnecessary_return": true,
    "align_parameters": false,
    "cds_comment_style": true,
    "change_if_to_case": true,
    "expand_macros": true,
    "no_external_form_calls": true,
    "cds_legacy_view": true,
    "cds_parser_error": true,
    "classic_exceptions_overlap": true,
    "constant_classes": true,
    "local_testclass_consistency": true,
    "no_aliases": true,
    "no_chained_assignment": true,
    "call_transaction_authority_check": true,
    "check_subrc": true,
    "cyclomatic_complexity": false,
    "dangerous_statement": true,
    "db_operation_in_loop": true,
    "select_add_order_by": true,
    "select_performance": true,
    "sy_modification": true,
    "uncaught_exception": true,
    "unsecure_fae": true,
    "unused_methods": true,
    "unused_types": true,
    "use_bool_expression": true,
    "use_class_based_exceptions": true,
    "use_line_exists": true,
    "forbidden_pseudo_and_pragma": true,
    "function_module_recommendations": true,
    "identical_conditions": true,
    "identical_contents": true,
    "identical_descriptions": true,
    "intf_referencing_clas": true,
    "line_break_style": false,
    "many_parentheses": true,
    "cyclic_oo": true,
    "max_one_method_parameter_per_line": true,
    "method_implemented_twice": true,
    "method_overwrites_builtin": false,
    "modify_only_own_db_tables": true,
    "no_yoda_conditions": false,
    "omit_parameter_name": false,
    "omit_receiving": true,
    "parser_702_chaining": true,
    "prefer_is_not": false,
    "prefer_raise_exception_new": true,
    "prefer_xsdbool": false,
    "keep_single_parameter_on_one_line": true,
    "line_break_multiple_parameters": false,
    "names_no_dash": true,
    "parser_missing_space": true,
    "prefer_inline": false,
    "prefer_returning_to_exporting": true,
    "prefix_is_current_class": true,
    "reduce_string_templates": true,
    "selection_screen_naming": false,
    "sicf_consistency": true,
    "unused_ddic": true,
    "sql_escape_host_variables": true,
    "try_without_catch": true,
    "unknown_types": true,
    "unused_variables": false,
    "xml_consistency": true,
    "begin_single_include": true,
    "check_comments": false,
    "downport": false,
    "forbidden_identifier": false,
    "forbidden_void_type": true,
    "fully_type_constants": true,
    "allowed_object_naming": true,
    "newline_between_methods": true,
    "chain_mainly_declarations": true,
    "check_abstract": true,
    "check_text_elements": true,
    "types_naming": false,
    "7bit_ascii": true,
    "abapdoc": false,
    "check_ddic": true,
    "check_include": true,
    "allowed_object_types": true,
    "ambiguous_statement": true,
    "avoid_use": {
      "define": true,
      "testSeams": true,
      "defaultKey": false,
      "exportToMemory": true,
      "exportToDatabase": true,
      "break": true,
      "describeLines": true,
      "statics": true
    },
    "begin_end_names": true,
    "check_transformation_exists": true,
    "check_syntax": true,
    "class_attribute_names": {
      "ignoreExceptions": true,
      "statics": "^M._.*$",
      "constants": "",
      "ignoreInterfaces": false,
      "ignoreLocal": false,
      "instance": "^M._.*$"
    },
    "cloud_types": true,
    "colon_missing_space": true,
    "commented_code": true,
    "constructor_visibility_public": true,
    "contains_tab": true,
    "definitions_top": true,
    "description_empty": true,
    "double_space": true,
    "empty_line_in_statement": {
      "allowChained": true
    },
    "empty_statement": true,
    "empty_structure": {
      "loop": true,
      "if": false,
      "while": true,
      "try": true,
      "when": true,
      "case": true,
      "select": true,
      "do": true,
      "at": true
    },
    "exit_or_check": true,
    "exporting": true,
    "form_tables_obsolete": true,
    "functional_writing": {
      "ignoreExceptions": true
    },
    "global_class": true,
    "identical_form_names": true,
    "if_in_if": true,
    "implement_methods": true,
    "in_statement_indentation": {
      "blockStatements": 0,
      "ignoreExceptions": true
    },
    "indentation": {
      "ignoreExceptions": true,
      "alignTryCatch": false,
      "globalClassSkipFirst": false,
      "selectionScreenBlockIndentation": false,
      "ignoreGlobalClassDefinition": false,
      "ignoreGlobalInterface": false
    },
    "inline_data_old_versions": true,
    "keyword_case": {
      "style": "upper",
      "ignoreExceptions": true,
      "ignoreKeywords": [],
      "ignoreGlobalClassBoundaries": false,
      "ignoreLowerClassImplmentationStatement": true,
      "ignoreGlobalClassDefinition": false,
      "ignoreGlobalInterface": false,
      "ignoreFunctionModuleName": false
    },
    "line_length": {
      "length": 120
    },
    "line_only_punc": {
      "ignoreExceptions": true
    },
    "local_class_naming": {
      "local": "^LCL_.*$",
      "exception": "",
      "test": "^LT?CL_.*$"
    },
    "local_variable_names": {
      "expectedData": "^L._.*$",
      "expectedConstant": "^LC_.*$",
      "expectedFS": "^<L._.*>$"
    },
    "main_file_contents": true,
    "max_one_statement": true,
    "message_exists": true,
    "method_length": {
      "statements": 250,
      "ignoreTestClasses": false,
      "checkForms": true,
      "errorWhenEmpty": false
    },
    "method_parameter_names": {
      "ignoreExceptions": true,
      "importing": "^I._.*$",
      "returning": "^R._.*$",
      "changing": "^C._.*$",
      "exporting": "^E._.*$",
      "ignoreNames": [
        "P_TASK"
      ]
    },
    "mix_returning": true,
    "msag_consistency": true,
    "nesting": {
      "depth": 5
    },
    "no_public_attributes": false,
    "object_naming": {
      "clas": "^ZC(L|X)\\_NTLM",
      "intf": "^ZIF\\_NTLM",
      "prog": "^ZNTLM",
      "fugr": "^Z",
      "shlp": "^Z",
      "tabl": "^Z",
      "xslt": "^Z",
      "ssfo": "^Z",
      "ssst": "^Z",
      "ttyp": "^Z",
      "dtel": "^ZNTLM",
      "doma": "^ZNTLM",
      "msag": "^Z",
      "tran": "^Z",
      "enqu": "^EZ",
      "auth": "^Z",
      "pinf": "^Z",
      "idoc": "^Z"
    },
    "obsolete_statement": {
      "refresh": true,
      "compute": true,
      "add": true,
      "formDefinition": true,
      "formImplementation": true,
      "subtract": true,
      "regex": true,
      "clientSpecified": true,
      "occurences": true,
      "communication": true,
      "exitFromSQL": true,
      "callTransformation": true,
      "sortByFS": true,
      "freeMemory": true,
      "load": true,
      "pack": true,
      "parameter": true,
      "ranges": true,
      "selectWithoutInto": true,
      "typePools": true,
      "fieldSymbolStructure": true,
      "multiply": true,
      "move": true,
      "withHeaderLine": true,
      "setExtended": true,
      "divide": true,
      "requested": true,
      "occurs": true
    },
    "parser_error": true,
    "preferred_compare_operator": {
      "badOperators": [
        "EQ",
        "><",
        "NE",
        "GE",
        "GT",
        "LT",
        "LE"
      ]
    },
    "release_idoc": true,
    "remove_descriptions": {
      "ignoreExceptions": true,
      "ignoreWorkflow": false
    },
    "rfc_error_handling": false,
    "sequential_blank": {
      "lines": 4
    },
    "short_case": {
      "length": 1,
      "allow": [
        "iv_action",
        "sy"
      ]
    },
    "space_before_colon": true,
    "space_before_dot": true,
    "start_at_tab": true,
    "superclass_final": false,
    "tabl_enhancement_category": true,
    "type_form_parameters": true,
    "unreachable_code": true,
    "use_new": true,
    "when_others_last": true,
    "whitespace_end": true
  },
  "targetRules": {
    "prefer_pragmas": true,
    "line_break_multiple_parameters": true,
    "align_parameters": true
  }
}
